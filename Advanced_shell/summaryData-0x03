#!/bin/bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Ensure the directory exists
if [ ! -d "$INPUT_DIR" ]; then
    echo "Error: Directory $INPUT_DIR not found."
    exit 1
fi

# CSV Header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Extract data from each JSON file
for file in "$INPUT_DIR"/*.json; do
    # Skip if no JSON files
    [ -e "$file" ] || continue

    # Extract fields using jq
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    # Convert units
    # height: decimeters → meters
    height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')

    # weight: hectograms → kilograms
    weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.1f", w / 10 }')

    # Capitalize name for report
    formatted_name=$(echo "$name" | sed 's/.*/\u&/')

    # Append row to CSV
    echo "$formatted_name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo ""
echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Display CSV content
cat "$OUTPUT_FILE"
echo ""

# Calculate averages with awk
awk -F',' 'NR>1 { total_h += $2; total_w += $3; count++ }
END {
    if (count > 0) {
        printf "Average Height: %.2f m\n", total_h / count
        printf "Average Weight: %.2f kg\n", total_w / count
    }
}' "$OUTPUT_FILE"
